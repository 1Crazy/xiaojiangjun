page {
  background-color: #f6f6f6;
}
.headerWrap {
  background-color: white;
  padding: 20rpx;
}
.headerWrap .header {
    background-color: #f8f8f8;
    position: relative;
    width: 710rpx;
    border-radius: 40rpx;
    height: 80rpx;
}
.headerWrap .header .ipt {
      width: 710rpx;
      height: 80rpx;
      background-color: #f2f2f2;
      border-radius: 40rpx;
      border: solid 1rpx #e3e3e3;
      line-height: 80rpx;
      font-family: PingFang-SC-Regular;
      font-size: 28rpx;
      font-weight: normal;
      font-stretch: normal;
      color: #999999;
      padding-left: 101rpx;
      padding-right: 29rpx;
      box-sizing: border-box;
      margin: 0 auto;
}
.headerWrap .header .img {
      position: absolute;
      width: 40rpx;
      height: 33rpx;
      left: 29rpx;
      top: 23rpx;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 24rpx 30rpx;
  background-color: white;
}
.nav .tit1 {
    font-family: PingFang-SC-Bold;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    color: #1db728;
}
.nav .tit2 {
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    color: #999999;
    margin-left: 78rpx;
}
.content {
  margin-top: 20rpx;
}
.content .itemView {
    width: 750rpx;
    height: 202rpx;
    background-color: #ffffff;
    padding: 21rpx 14rpx;
    box-sizing: border-box;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.content .itemView .img {
      width: 160rpx;
      height: 160rpx;
      border-radius: 10rpx;
}
.content .itemView .rightBox {
      margin-left: 20rpx;
}
.content .itemView .rightBox .title {
        font-family: PingFang-SC-Bold;
        font-size: 32rpx;
        font-weight: normal;
        font-stretch: normal;
        color: #333333;
}
.content .itemView .rightBox .center {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        margin-top: 20rpx;
        margin-bottom: 34rpx;
}
.content .itemView .rightBox .center view {
          width: 66rpx;
          height: 32rpx;
          background-color: #f4f4f4;
          border-radius: 16rpx;
          font-family: PingFang-SC-Medium;
          font-size: 22rpx;
          margin-right: 10rpx;
          font-weight: normal;
          font-stretch: normal;
          text-align: center;
          color: #474747;
}
.content .itemView .rightBox .distance {
        font-family: PingFang-SC-Medium;
        font-size: 28rpx;
        font-weight: normal;
        font-stretch: normal;
        color: #666666;
}
.content .itemView .threedot {
      position: absolute;
      right: 30rpx;
      top: 98rpx;
      width: 34rpx;
      height: 8rpx;
}

